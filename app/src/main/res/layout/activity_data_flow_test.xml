<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Flow Test Center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnHealthCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Health Check"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnShowStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show Status"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSendTestData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Test Data"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnSendBatchTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Batch Test"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnClearQueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Offline Queue"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Log:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvLogOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Ready] Data Flow Test Center initialized\nTap buttons above to test data flow to EC2"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:lineSpacingExtra="2dp" />

    </ScrollView>

</LinearLayout>
