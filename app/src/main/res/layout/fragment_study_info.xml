<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Info"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Manual Data Testing Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Data Testing"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Start Date and Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date &amp; Time:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Start Date"
                style="?android:attr/buttonStyleSmall"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Start Time"
                style="?android:attr/buttonStyleSmall"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStartDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start: Not selected"
            android:textSize="14sp"
            android:background="#F0F0F0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- End Date and Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date &amp; Time:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select End Date"
                style="?android:attr/buttonStyleSmall"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select End Time"
                style="?android:attr/buttonStyleSmall"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEndDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End: Not selected"
            android:textSize="14sp"
            android:background="#F0F0F0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSendBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Batch of Data"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@android:color/white" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select date range and tap 'Send Batch of Data' to test server connection"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Batch Preview -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Batch Preview:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAnalyticsSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="12sp"
            android:background="@android:color/background_light"
            android:padding="12dp"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView>
